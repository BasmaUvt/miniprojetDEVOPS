<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:shadowColor="@color/gray"
    android:shadowDx="0"
    android:shadowDy="8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/name_plane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/progress_check"
        app:layout_constraintEnd_toStartOf="@+id/remove_flight"
        app:layout_constraintBottom_toTopOf="@+id/sep"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/remove_flight"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:fontFamily="@font/font_awesome_five_pro_light"
        android:text="@string/trash"
        android:textColor="@color/white"
        android:background="#B3CAF4"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sep"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/progress_check"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/sep"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:background="#DDE7FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>